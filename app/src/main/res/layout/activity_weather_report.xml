<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravia.weatherapplication.WeatherReport">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg" />


    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">


                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="24dp"
                    android:text="Weather Report"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"

                    android:text="Brief"
                    android:layout_below="@+id/tv_"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <EditText
                    android:id="@+id/briefET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv"
                    android:background="@drawable/et_bg"
                    android:hint=""
                    android:padding="14dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/briefET"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Description"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <EditText
                    android:id="@+id/descET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:background="@drawable/et_bg"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Weather description"
                    android:padding="14dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descET"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Pressure"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <EditText
                    android:id="@+id/pressureET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv2"
                    android:background="@drawable/et_bg"
                    android:editable="false"
                    android:hint="pressure"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="14dp"
                    android:textColor="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pressureET"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Humidity"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />


                <EditText
                    android:id="@+id/humidityET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:background="@drawable/et_bg"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="humidity"
                    android:padding="14dp"
                    android:textColor="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/humidityET"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Wind"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/windET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv4"
                    android:background="@drawable/et_bg"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Wind"
                    android:padding="14dp"
                    android:textColor="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/saveTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/windET"
                    android:layout_marginBottom="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@color/cardview_shadow_start_color"

                    android:gravity="center"
                    android:padding="16dp"
                    android:text="SAVE" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
